<div id="<%= dom_id(profile) %>">
  <%= profile.analysis_status['analysed_repos_count'] %> / <%= profile.analysis_status['repos_count'] %> repos analysed.
  <svg width='100%' height='65px'>
    <g class='bars'>
      <rect fill='#3d5599' width='100%' height='25'></rect>
      <rect fill='#cb4d3e' width="<%= (profile.analysis_status['analysed_repos_count'] * 100.0 / profile.analysis_status['repos_count']).ceil %>%" height='25'></rect>
    </g>
  </svg>
  <% unless profile.analysis_status['current_repo'].nil? %>
    Analysing <%= link_to(profile.analysis_status['current_repo'].fetch('name'), profile.analysis_status['current_repo'].fetch('url')) %>
  <% end %>
</div>
