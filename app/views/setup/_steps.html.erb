<nav aria-label="Progress" class="flex justify-center">
  <ol class="flex items-center">
    <% 4.times do |i| %>
      <li class="relative<% if i+1 != 4 %> pr-8 sm:pr-20<% end %>">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <% if current_user.setup_step > i+1 %>
            <div class="h-0.5 w-full bg-teal-600"></div>
          <% else %>
            <div class="h-0.5 w-full bg-gray-200"></div>
          <% end %>
        </div>
        <% if current_user.setup_step > i+1 %>
          <!-- Completed Step -->
          <a class="relative w-8 h-8 flex items-center justify-center bg-teal-600 rounded-full hover:bg-teal-900">
            <!-- Heroicon name: solid/check -->
            <svg class="w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Step <%= i+1 %></span>
          </a>
        <% elsif current_user.setup_step == i+1 %>
          <a class="relative w-8 h-8 flex items-center justify-center bg-white border-2 border-teal-600 rounded-full" aria-current="step">
            <span class="h-2.5 w-2.5 bg-teal-600 rounded-full" aria-hidden="true"></span>
            <span class="sr-only">Step <%= i+1 %></span>
          </a>
        <% else %>
          <a class="group relative w-8 h-8 flex items-center justify-center bg-white border-2 border-gray-300 rounded-full hover:border-gray-400">
            <span class="h-2.5 w-2.5 bg-transparent rounded-full group-hover:bg-gray-300" aria-hidden="true"></span>
            <span class="sr-only">Step <%= i+1 %></span>
          </a>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>
